@using Gtm.Contract.SiteContract.SitePageContract.Command
@model CreateSitePage
 

  @{
    ViewData["Title"] = "افزودن صفحه ";
}
<div class="row">
    <div class="col-xs-12">
        <div class="box box-success">
            <form method="post" role="form">
                <div class="box-body">
                            <div class="form-group">
                                <label asp-for="Title"></label>
                                <input class="form-control" asp-for="Title" onchange="makeSlug('Title','Slug')">
                                <span class="text-danger" asp-validation-for="Title"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Slug"></label>
                                <input class="form-control" asp-for="Slug">
                                <span class="text-danger" asp-validation-for="Slug"></span>
                            </div
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <label asp-for="Text"></label>
                                <textarea id="editor1" asp-for="Text" rows="10"
                                          cols="80">

                                  </textarea>
                                <span class="text-danger" asp-validation-for="Text"></span>
                            </div>
                        </div>

                    </div>
                </div>
                <!-- /.box-body -->

                <div class="box-footer">
                    <button type="submit" class="btn btn-success">ارسال</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{
   
        $(function () {
          CKEDITOR.replace('editor1');
        })
   
 
        $(document).ready(function() {
            @if (TempData["Error"] != null)
            {
                <text>
                    Swal.fire({
                        icon: 'error',
                        title: 'خطا',
                        text: '@Html.Raw(TempData["Error"])',
                        confirmButtonText: 'تایید'
                    });
                </text>
            }
            
            // نمایش خطاهای اعتبارسنجی مدل
            @if (!ViewData.ModelState.IsValid)
            {
                <text>
                    var errors = '';
                    @foreach (var item in ViewData.ModelState)
                    {
                        foreach (var error in item.Value.Errors)
                        {
                            <text>errors += '@Html.Raw(error.ErrorMessage)' + '\n';</text>
                        }
                    }
                    
                    if (errors.trim() !== '') {
                        Swal.fire({
                            icon: 'error',
                            title: 'خطا',
                            text: errors,
                            confirmButtonText: 'تایید'
                        });
                    }
                </text>
            });
      }     
    }
 